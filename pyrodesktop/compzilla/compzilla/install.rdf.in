<?xml version="1.0"?>

<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:em="http://www.mozilla.org/2004/em-rdf#">

  <Description about="urn:mozilla:install-manifest">

    <em:id>compzilla@pyrodesktop.org</em:id>
    <em:version>@VERSION@</em:version>
    <em:type>2</em:type>
    <em:targetPlatform>@FIREFOX_TARGETPLATFORM@</em:targetPlatform>

    <em:name>Pyro Desktop</em:name>
    <em:description>Desktop Window Manager built on Firefox</em:description>
    <em:creator>Alex Graveley</em:creator>
    <em:homepageURL>http://pyrodesktop.org/</em:homepageURL>
    <em:iconURL>chrome://compzilla/content/pyrologo.png</em:iconURL>

    <!-- This requires HTTPS, but extensions listed at addons.mozilla.org are
         updated automatically, so use that instead. -->
    <!-- 
        <em:updateURL>https://pyrodesktop.org/releases/update.rdf</em:updateURL>
    -->

    <!-- Firefox -->
    <em:targetApplication>
      <Description>
        <em:id>{ec8030f7-c20a-464f-9b0e-13a3a9e97384}</em:id>
        <em:minVersion>@FIREFOX_MINVERSION@</em:minVersion>
        <em:maxVersion>@FIREFOX_MAXVERSION@</em:maxVersion>
      </Description>
    </em:targetApplication>

  </Description>

</RDF>
